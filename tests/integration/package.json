{
  "name": "tsp-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for The Sandwich Project modularized routes",
  "scripts": {
    "test": "jest --testPathPattern=integration --verbose",
    "test:watch": "jest --testPathPattern=integration --watch",
    "test:coverage": "jest --testPathPattern=integration --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "collectCoverageFrom": [
      "../../server/routes/**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  }
}