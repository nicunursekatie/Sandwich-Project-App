modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["chromium", "glib", "glibcLocales", "gtk3", "jq", "killall", "nss", "tree", "nano", "sqlite-interactive"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]
# Replit automatically monitors /health endpoint and restarts on crashes
# No need for aggressive keep-alive code in server/index.ts

[[ports]]
localPort = 5000
externalPort = 80
# Main server port - exposed as port 80 externally

[[ports]]
localPort = 5173
externalPort = 5173
# Vite dev server (development only)

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
