# SMS Provider Configuration
# Choose between 'twilio' or 'phone_gateway'
SMS_PROVIDER=twilio

# Twilio Configuration (if using SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=AC6e06dc526fd4a7874b493f3cddb62828
TWILIO_AUTH_TOKEN=AC6e06dc526fd4a7874b493f3cddb62828
TWILIO_PHONE_NUMBER=42efe208c7dda9fb29696d127fa36f6b

# Phone Gateway Configuration (if using SMS_PROVIDER=phone_gateway)
# The URL of your Android SMS gateway app
PHONE_GATEWAY_URL=http://192.168.1.100:8080/send

# Optional: API key for authentication (depends on your gateway app)PHONE_GATEWAY_API_KEY=your_optional_api_key

# Optional: Your device's phone number (for display purposes)


# Optional: Request timeout in milliseconds (default: 30000)


# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=+18449441127
NOTIFICATION_FROM_EMAIL=katie@thesandwichproject.org



# Environment (affects logging level and sample rates)
NODE_ENV=development

# URL Configuration
# The browser-facing URL where the web app lives
# Local dev: http://localhost:5000
# Production: https://app.your-org.org or your public domain
APP_BASE_URL=http://localhost:5000

# The base URL the frontend uses for API calls
# If API is served from same host/port as app, match APP_BASE_URL
# If split (e.g. API on separate domain): https://api.your-org.org
API_BASE_URL=http://localhost:5000

# Comma-separated list of origins that may call the API from browser
# Include APP_BASE_URL plus any alternate dev hosts
# Local dev example: http://localhost:5000,http://localhost:5173
# Production example: https://app.your-org.org,https://www.your-org.org
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173

# WebSocket base URL (optional)
# Only needed when frontend runs on different origin than WebSocket endpoint
# Point to API host so client can connect
# Local dev: http://localhost:5000
VITE_WS_BASE_URL=http://localhost:5000

# Twilio SMS status callback URL (optional)
# Public URL where Twilio POSTs delivery updates
# Must be publicly reachable: your-api-url/api/users/sms-webhook/status
# Example: https://app.your-org.org/api/users/sms-webhook/status
SMS_STATUS_CALLBACK_URL=

# Database Configuration
DATABASE_URL=your_database_url_here

# Application Domain
REPLIT_DOMAIN=your-app-domain.replit.app

# Firebase Cloud Messaging (for push notifications - optional)
# FCM_SERVER_KEY=your_fcm_server_key_here
# FCM_PROJECT_ID=your_fcm_project_id_here
# FCM_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Apple Push Notification Service (for iOS push notifications - optional)
# APNS_KEY_ID=your_apns_key_id_here
# APNS_TEAM_ID=your_apns_team_id_here
# APNS_KEY_PATH=/path/to/apns-key.p8

# Monitoring & Observability Configuration

# Sentry Error Tracking (optional but recommended for production)
# Sign up at https://sentry.io and create a Node.js project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_RELEASE=sandwich-platform@1.0.0