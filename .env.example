# SMS Provider Configuration
# Choose between 'twilio' or 'phone_gateway'
SMS_PROVIDER=twilio

# Twilio Configuration (if using SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Phone Gateway Configuration (if using SMS_PROVIDER=phone_gateway)
# The URL of your Android SMS gateway app
PHONE_GATEWAY_URL=http://192.168.1.100:8080/send

# Optional: API key for authentication (depends on your gateway app)
PHONE_GATEWAY_API_KEY=your_optional_api_key

# Optional: Your device's phone number (for display purposes)
PHONE_GATEWAY_DEVICE_NUMBER=+1234567890

# Optional: Request timeout in milliseconds (default: 30000)
PHONE_GATEWAY_TIMEOUT=30000

# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
NOTIFICATION_FROM_EMAIL=noreply@thesandwichproject.org

# Firebase Cloud Messaging (for push notifications - optional)
# FCM_SERVER_KEY=your_fcm_server_key_here
# FCM_PROJECT_ID=your_fcm_project_id_here
# FCM_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Apple Push Notification Service (for iOS push notifications - optional)
# APNS_KEY_ID=your_apns_key_id_here
# APNS_TEAM_ID=your_apns_team_id_here
# APNS_KEY_PATH=/path/to/apns-key.p8

# Application Configuration
REPLIT_DOMAIN=your-app-domain.replit.app
DATABASE_URL=your_database_url_here

# Monitoring & Observability Configuration

# Sentry Error Tracking (optional but recommended for production)
# Sign up at https://sentry.io and create a Node.js project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_RELEASE=sandwich-platform@1.0.0

# Environment (affects logging level and sample rates)
NODE_ENV=development