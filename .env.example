# SMS Provider Configuration
# Choose between 'twilio' or 'phone_gateway'
SMS_PROVIDER=twilio

# Twilio Configuration (if using SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Phone Gateway Configuration (if using SMS_PROVIDER=phone_gateway)
# The URL of your Android SMS gateway app
PHONE_GATEWAY_URL=http://192.168.1.100:8080/send

# Optional: API key for authentication (depends on your gateway app)
PHONE_GATEWAY_API_KEY=your_optional_api_key

# Optional: Your device's phone number (for display purposes)
PHONE_GATEWAY_DEVICE_NUMBER=+1234567890

# Optional: Request timeout in milliseconds (default: 30000)
PHONE_GATEWAY_TIMEOUT=30000

# Application Configuration
REPLIT_DOMAIN=your-app-domain.replit.app
DATABASE_URL=your_database_url_here